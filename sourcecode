#include <iostream>
#include <cstdlib>
#include <vector>
#include <ctime>
#include <queue>
using namespace std;

void generateMaze(int length, vector<vector<char>>& maze) {
    for (int i = 0; i < length; i++) {
        for (int j = 0; j < length; j++) {
            maze[i][j] = (rand() % 3 == 1) ? '#' : '.'; // Ternary operator used as if statement
        }
    }
    // Creating Exit & Start Position
    int ex = rand() % length;
    int ey = rand() % length;
    int sx = rand() % length;
    int sy = rand() % length;
    maze[ex][ey] = 'E';
    maze[sx][sy] = 'S';
    for (int i = 0; i < length; i++) { // Printing out maze
        for (int j = 0; j < length; j++) {
            cout << maze[i][j] << ' ';
        }
        cout << "\n";
    }
}

