}

int main() {
    srand(time(0));
    int length;
    cout << "Enter the maze length: ";
    cin >> length;
    vector<vector<char>> maze(length, vector<char>(length)); // Initializes 2D vector
    generateMaze(length, maze);
    cout << "Maze has been generated." << endl;
    solveMaze(length, maze);
    return 0;
}
